<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout"
    android:animateLayoutChanges="true">

    <android.support.v4.widget.NestedScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/booking_page_top_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_restaurant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/booking_current_page_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Бронирование в" />

                    <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--android:id="@+id/close_booking_button"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:src="@drawable/icon_booking"/>-->
                    <!--android:src="@drawable/ic_close_black_24dp" />-->


            </LinearLayout>


            <!-- Booking Info -->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="26dp"-->
                <!--android:layout_marginRight="26dp"-->
                <!--android:layout_marginBottom="6dp"-->
                <!--android:text="Отмена бронирования возможна, если оно ещё не подтверждено администратором ресторана" />-->

            <LinearLayout
                android:id="@+id/booking_info_section"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="Детали бронирования"
                    android:layout_marginLeft="26dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="10dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="26dp"
                            android:text="Дата бронирования"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/picked_date_textview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="26dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:text="09.01.2019"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="26dp"
                            android:text="Время бронирования"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/picked_time_textview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="26dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:text="12:30"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="26dp"
                            android:text="Количество гостей"
                            android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/guests_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="26dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:text="2"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />


                            </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="26dp"
                            android:text="Пожелания"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="26dp"
                            android:layout_marginRight="26dp">

                            <TextView
                                android:id="@+id/preferences"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Пожелания"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                android:lines="5"
                                android:maxLines="10"
                                android:minLines="0"
                                android:scrollbars="vertical" />

                        </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingLeft="26dp"
                        android:text="Предзаказ"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="13dp">

                        <TextView
                            android:id="@+id/has_preorder_or_not"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Есть"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/rv"
                       android:layout_marginLeft="26dp"
                       android:layout_marginRight="26dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_below="@id/linearLayout"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/booking_client_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="Ваши данные"
                    android:layout_marginLeft="26dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="7dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="2dp"
                    app:cardCornerRadius="0dp"
                    app:contentPaddingBottom="20dp"
                    app:contentPaddingLeft="26dp"
                    app:contentPaddingRight="24dp"
                    app:contentPaddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Фамилия"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/input_surname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="textCapWords|textPersonName" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Имя"
                            android:layout_marginTop="12dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="textCapWords|textPersonName"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Электронная почта"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@android:color/transparent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Сотовый телефон"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/input_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="phone"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:id="@+id/accept_reject_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            app:cardBackgroundColor="@color/colorRed"
                            app:cardCornerRadius="5dp"
                            android:layout_margin="1.5dp">
                            <LinearLayout
                                android:id="@+id/decline_booking_button"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginRight="12dp"
                                    android:src="@drawable/icon_remove_white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Отклонить"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            app:cardBackgroundColor="@color/lightGreen"
                            app:cardCornerRadius="5dp"
                            android:layout_margin="1.5dp">

                            <LinearLayout
                                android:id="@+id/accept_booking_button"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginRight="12dp"
                                    android:src="@drawable/icon_accept_white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Подтвердить"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/error_page"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"/>

</RelativeLayout>
