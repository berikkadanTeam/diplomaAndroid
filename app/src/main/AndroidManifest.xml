<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.login.mobi.loginapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/application_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BookMeTheme">

        <activity
            android:name=".views.authorization.WelcomePage"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DetailsActivity" />
        <!-- <activity android:name=".MyApp"></activity> -->
        <activity
            android:name=".views.authorization.SignUpPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.authorization.SignInPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.bottomNavigation.BottomNavigationPage"
            android:label="@string/title_activity_bottom_navigation_page">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>