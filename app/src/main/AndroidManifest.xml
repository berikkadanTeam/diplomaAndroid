<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.login.mobi.loginapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_book_me_launcher"
        android:label="@string/application_name"
        android:roundIcon="@mipmap/ic_book_me_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BookMeTheme">

        <!-- android:icon="@mipmap/ic_launcher" -->
        <!-- android:roundIcon="@mipmap/ic_launcher_round" -->

        <activity
            android:name=".UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DetailsActivity" />
        <!-- <activity android:name=".MyApp"></activity> -->


        <!-- Welcome Page, Sign In, Sign Up Pages -->
        <activity
            android:name=".views.authorization.WelcomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.authorization.SignUpPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.authorization.SignInPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- Order Pages -->
        <activity
            android:name=".views.order.Version1_QrCodeScanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Tabs"
            android:label="@string/title_activity_tabs"
            android:theme="@style/BookMeTheme"></activity>
        <activity
            android:name=".TabsDynamically"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.order.TabsMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.order.OrderedDishesPage"
            android:screenOrientation="portrait" />

        <!-- Restaurant Pages -->
        <activity
            android:name=".views.restaurants.RestaurantInformationPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.restaurants.RestaurantWebViewPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.restaurants.RestaurantTableBookingPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.restaurantMenu.RestaurantDishTypesPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.restaurantMenu.RestaurantDishesPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.restaurantMenu.RestaurantDishInformationPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.restaurantMenu.RestaurantDishesPreorderPage"
            android:screenOrientation="portrait" />

        <!-- Menu Pages -->
        <activity
            android:name=".views.menu.profile.ProfilePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.menu.profile.ProfileEditPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- Bottom Navigation -->
        <activity android:name=".views.bottomNavigation.BottomNavigationPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>




    </application>

</manifest>